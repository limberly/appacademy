<h1>All the cats!</h1>

<ul>

  <% @cats.each do |cat|%>
    <li>
      <a href="/cats/<%= cat.id%>">
        This is <%=cat.name%>
      </a>
      <form action="<%= cat_url(cat)%>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Remove Cat">
      </form>
    </li>
  <% end%>
  
</ul>

<a href="<%=new_cat_url%>">
  Create Cat!
</a>